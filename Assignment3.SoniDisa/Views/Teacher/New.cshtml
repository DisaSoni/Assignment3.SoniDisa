@model Assignment3.SoniDisa.Models.Teacher
@{
    ViewBag.Title = "New";
}
<div style="background-color:lightblue;">
    <h2 style="text-align:center; color:dimgrey"> New Teacher</h2>


    <form method="POST" action="/Teacher/Create">


        <div>
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />
        </div>
        <div>
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />
        </div>
        <div>
            <label for="EmployeeNumber">Employee No:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
        </div>
        <div>
            <label for="TeacherHireDate">HireDate:</label>
            <input type="Date" id="TeacherHireDate" name="TeacherHireDate" />
        </div>
        <div>
            <label for="TeacherSalary">Salary:</label>
            <input type="text" id="TeacherSalary" name="TeacherSalary" />
        </div>
        <div style="color:dimgray">
            <input type="submit" value="Add Teacher" />
        </div>
    </form>

</div>

