@model Assignment3.SoniDisa.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<nav>
    <a class="navlink" href="/Teacher/Show/@Model.TeacherId" style="float:left;"> Back</a>
</nav>
<h2 style="text-align:center">Update Your information</h2>
<div style="background-color:lightblue;">
    <h2 style="text-align:center; color:dimgrey"> Update Teacher</h2>


    <form method="POST" action="/Teacher/Update/@Model.TeacherId">


        <div>
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname" />
        </div>
        <div>
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" />
        </div>
        <div>
            <label for="EmployeeNumber">Employee No:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div>
            <label for="TeacherHireDate">HireDate:</label>
            <input type="Date" id="TeacherHireDate" name="TeacherHireDate" value="@Model.TeacherHireDate" />
        </div>
        <div>
            <label for="TeacherSalary">Salary:</label>
            <input type="text" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" />
        </div>
        <div style="color:dimgray">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>

</div>



